# Based on https://opensource.com/article/19/10/why-use-rxvt-terminal
# Colors from terminal.sexy

! special
URxvt*.foreground:   #c5c8c6
URxvt*.background:   [90]#1d1f21
URxvt.cursorColor:  #c5c8c6

! black
*.color0:       #282a2e
*.color8:       #373b41

! red
*.color1:       #a54242
*.color9:       #cc6666

! green
*.color2:       #8c9440
*.color10:      #b5bd68

! yellow
*.color3:       #de935f
*.color11:      #f0c674

! blue
*.color4:       #5f819d
*.color12:      #81a2be

! magenta
*.color5:       #85678f
*.color13:      #b294bb

! cyan
*.color6:       #5e8d87
*.color14:      #8abeb7

! white
*.color7:       #707880
*.color15:      #c5c8c6

URxvt*depth: 32
URxvt*font: xft:Ubuntu Mono derivative Powerline:pixelsize=12:antialias=true
URxvt*boldFont: xft:UbuntuMono-B:pixelsize=12:antialias=true
URxvt*italicFont: xft:UbuntuMono-RI:pixelsize=12:antialias=true
URxvt*letterSpace: -1
URxvt*scrollBar: false

