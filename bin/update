#!/bin/zsh

. "$HOME/.shell_scripts"
. "$HOME/.zshrc"

# Update packages
if command_exists apt; then
    sudo apt update && sudo apt upgrade
fi
if command_exists pacman; then
    sudo pacman -Syu
fi

echo Updating dotfile repository...
dotfiles pull

# Update oh-my-zsh, if it is installed
if command_exists zsh && test -d ~/.oh-my-zsh; then
    yes | omz-update
fi

# Update antigen plugins
echo 'Updating antigen plugins...'
antigen update
## this should update any added plugins
zsh -i -c exit

# Update vim plugins (and antigen and other possible submodules)
if command_exists vim-plugin; then
    vim-plugin update
fi

# Update Neovim plugins
if command_exists nvim; then
    echo 'nvim found, updating plugins...'
    nvim -c PlugInstall -c PlugUpdate -c PlugClean -c quit -c quit
fi
